<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" android:maxSdkVersion="32" tools:ignore="ScopedStorage" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BeeSang"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BeeSang">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false">
        </activity>

        <!-- Home Activity -->
        <activity
            android:name=".activities.HomeActivity"
            android:exported="false">
        </activity>

        <!-- Register Activity -->
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false">
        </activity>

        <!-- Lecture Activity -->
        <activity
            android:name=".activities.LectureActivity"
            android:exported="false">
        </activity>

        <!-- Assignment Activity -->
        <activity
            android:name=".activities.AssignmentActivity"
            android:exported="false">
        </activity>

        <!-- InAssignment Activity -->
        <activity
            android:name=".activities.InAssignmentActivity"
            android:exported="false">
        </activity>

        <!-- Chapter Activity -->
        <activity
            android:name=".activities.ChapterActivity"
            android:exported="false">
        </activity>

        <!-- Game Activity -->
        <activity
            android:name=".activities.GameActivity"
            android:exported="false">
        </activity>

        <!-- Game Board Activity -->
        <activity
            android:name=".activities.InGameActivity"
            android:exported="false">
        </activity>

        <!-- MyPage Activity -->
        <activity
        android:name=".activities.MyPageActivity"
        android:exported="false">
        </activity>

        <!-- Video Activity -->
        <activity
            android:name=".activities.VideoActivity"
            android:exported="false">
        </activity>


    </application>

</manifest>